<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Filled.QuestionMark" Color="Color.Success" Size="Size.Large" Class="mb-2"></MudIcon>
            @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        @Content
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Size="Size.Small" Class="mr-2" Color="Color.Error" OnClick="Cancel">Otkaži</MudButton>
        <MudButton Variant="Variant.Filled" Size="Size.Small" Class="mr-2" Color="Color.Success" OnClick="Submit">Potvrdi</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public string Content { get; set; }
    void Cancel() => MudDialog.Cancel();
    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}
