<MudDialog>
    <DialogContent>
        <MudItem Class="d-flex justify-content-center">
            <MudText Typo="Typo.h6" Style="font-weight:normal">
                Menjate dobavljača pod imenom:
            </MudText>
        </MudItem>
        <MudItem Class="d-flex justify-content-center">
            <MudText>
                <b>@finalSettlements.Select(x => x.Dobavljac).First()</b>
            </MudText>
        </MudItem>
        <MudSpacer />
        <MudItem>
            <MudAutocomplete T="string" Label="Izaberite dobavljaca" @bind-Value="searchString" MaxItems="partnerList.Count()" SearchFunc="@Search" />
        </MudItem>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Size="Size.Small" Color="Color.Error" OnClick="Cancel">Odustani</MudButton>
        <MudButton Variant="Variant.Filled" Size="Size.Small" Color="Color.Success" OnClick="(async ()=> await Submit())">Izmeni</MudButton>
    </DialogActions>
</MudDialog>

