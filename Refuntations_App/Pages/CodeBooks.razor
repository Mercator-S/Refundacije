@page "/sifarnici"
<MudGrid Class="m-3">
    <MudItem xs="12" sm="4" Class="ms-2">
            <MudSelect Class="d-inline ml-6 mt-3" T="string" Label="Izaberi" Variant="Variant.Filled" AnchorOrigin="Origin.BottomCenter">
                <MudSelectItem Value="@("One")" />
                <MudSelectItem Value="@("Two")" />
                <MudSelectItem Value="@("Three")" />
                <MudSelectItem Value="@("Four")" />
             </MudSelect>
    </MudItem>
    <MudItem xs="12" sm="6">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-4" Style="height: 45px">
            <MudIcon Icon="@Icons.Outlined.SimCardDownload" Title="Importuj" />&nbsp;Preuzmi Excel template
        </MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-4" Style="height: 45px">
            <MudIcon Icon="@Icons.Filled.UploadFile" Title="Importuj" />&nbsp;Importuj
        </MudButton>
    </MudItem>
    <MudItem xs="12" sm="10" Class="p-0">
        @if
        (Columns == null)
        {
            <MudProgressCircular Color="Color.Secondary" Indeterminate="true" />
        }
        else
        {
            <Table Columns="Columns" Elements="Elements"></Table>
        }
       
    </MudItem>
</MudGrid>



