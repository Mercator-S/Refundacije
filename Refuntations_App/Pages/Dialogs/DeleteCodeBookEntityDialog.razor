@using Refundation_App_Services.Services;
<MudDialog>
    <DialogContent>
       Klikom na Potvrdi, selektovani entitet će biti obrisan.
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Otkaži</MudButton>
        <MudButton Color="Color.Primary" OnClick="DeleteTargetEntity">Potvrdi</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public Object TargetEntity { get; set; }
    [Parameter] public string SelectedValue { get; set; }

    [Inject]
    private ICodeBookService _codeBookService { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();

    public void DeleteTargetEntity()
    {
        try
        {
            var entity= _codeBookService.DeleteEntity(TargetEntity, SelectedValue);
             MudDialog.Close(DialogResult.Ok(entity));
        }
        catch(Exception e)
        {
   
         //show some error dialog   
        }
    }
}